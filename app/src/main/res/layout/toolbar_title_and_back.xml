<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appbar_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_segment_view_bottom_main">

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/img_back_activity"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:src="@drawable/icon_back_arrow" />


        <TextView
            android:id="@+id/txt_title_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_back_activity"
            android:text="Xem lich su bai dang"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.design.widget.AppBarLayout>