<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_activity_upload_photo"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_upload_photo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_info_upload_photo"
        android:layout_marginRight="@dimen/margin_right_info_upload_photo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_activity_upload_photo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appbar_layout"
                android:layout_marginTop="@dimen/margin_top_img_preview_upload"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_preview_upload_photo"
                    android:layout_width="@dimen/size_img_preview_upload"
                    android:layout_height="@dimen/size_img_preview_upload"
                    android:scaleType="centerCrop"
                   />

                <EditText
                    android:id="@+id/edit_description_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:layout_marginLeft="@dimen/margin_left_edit_description_post"
                    android:layout_marginTop="@dimen/margin_top_edit_description_post"
                    android:background="@android:color/transparent"
                    android:hint="@string/text_hint_description_post"
                    android:inputType="textNoSuggestions|textMultiLine|textCapWords"
                    android:textAlignment="textStart"
                    android:textAllCaps="false">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="12dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_info_feed_upload"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_school" />

                <Spinner
                    android:id="@+id/spinner_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp">
                </Spinner>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>