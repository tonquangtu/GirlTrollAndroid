<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_bottom_control_video"
        android:layout_marginLeft="@dimen/margin_left_control_video"
        android:layout_marginRight="@dimen/margin_right_control_video"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/txt_time_current"
            android:textSize="14sp"
            android:textColor="@color/color_text_view_video"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"/>

        <SeekBar
            android:id="@+id/sb_media_controller_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/blue_scrubber_progress"
            />

        <TextView android:id="@+id/txt_time"
            android:textColor="@color/color_text_view_video"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"/>

        <ImageButton android:id="@+id/img_btn_fullscreen"
            android:src="@drawable/icon_fullscreen"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            style="?borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/description_full_screen" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/img_btn_pause"
        android:src="@drawable/icon_play"
        style="?borderlessButtonStyle"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/height_play_button"
        android:layout_height="@dimen/width_play_button" />

</RelativeLayout>